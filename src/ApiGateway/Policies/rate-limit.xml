<policies>
    <inbound>
        <rate-limit-by-key calls="5" renewal-period="60" counter-key="@(context.Request.IpAddress)" />
    </inbound>
    <backend>
        <forward-request />
    </backend>
    <outbound>
        <set-header name="X-Rate-Limit-Limit" exists-action="override">
            <value>5</value>
        </set-header>
        <set-header name="X-Rate-Limit-Remaining" exists-action="override">
            <value>@(context.Variables["rateLimitRemaining"])</value>
        </set-header>
        <set-header name="X-Rate-Limit-Reset" exists-action="override">
            <value>@(context.Variables["rateLimitReset"])</value>
        </set-header>
    </outbound>
    <on-error>
        <return-response>
            <set-status code="429" reason="Too Many Requests" />
            <set-header name="Content-Type" exists-action="override">
                <value>application/json</value>
            </set-header>
            <body>
                {
                    "error": {
                        "message": "Rate limit exceeded. Please try again later."
                    }
                }
            </body>
        </return-response>
    </on-error>
</policies>